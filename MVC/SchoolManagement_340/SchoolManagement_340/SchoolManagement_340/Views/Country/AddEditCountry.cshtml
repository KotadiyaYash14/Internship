@model SchoolManagement_340.Models.CustomModel.CustomCountry

@using (Html.BeginForm("AddEditCountry", "Country", FormMethod.Post))
 {
    <div>
        @Html.HiddenFor(x => x.CountryId, new { @class = "form-control form-control-user" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(x => x.CountryName, new { @class = "form-control form-control-user mt-4", placeholder = "--- Country ---" })
        @Html.ValidationMessageFor(x => x.CountryName, "", new { @class = "text-danger" })
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-outline-primary btn-user w-25">Add</button>
    </div>
 }
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>