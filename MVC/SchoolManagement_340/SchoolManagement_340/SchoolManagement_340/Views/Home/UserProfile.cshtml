@using SchoolManagement_340.Helper.SessionHelper

<div class="mt-3">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>UserFirstName</th>
                <th>UserLastName</th>
                <th>UserEmail</th>
                <th>UserRole</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@SessionData.UserFirstName</td>
                <td>@SessionData.UserLastName</td>
                <td>@SessionData.UserEmail</td>
                <td><span class="badge badge-success">@SessionData.UserRole</span></td>
                <td><a href="/Home/EditProfile" class="btn btn-outline-success">Edit</a></td>
            </tr>
        </tbody>
    </table>
</div>